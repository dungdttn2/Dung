<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#d5fac8"
    tools:context=".feature.contact.ContactActivity">

    <TextView
        android:id="@+id/txt_header"
        android:layout_width="match_parent"
        android:text="Thông tin liên hệ"
        android:textSize="30sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#f5250a"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/layout_address"
        android:layout_below="@id/txt_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:id="@+id/txt_lb_sdt"

            android:layout_width="wrap_content"
            android:text="Địa chỉ"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#fd5242"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:text="Số nhà 18 tổ 3 tân thịnh thái nguyên"
            android:id="@+id/txt_address"
            android:layout_below="@id/txt_lb_sdt"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_email"
        android:layout_below="@id/layout_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:id="@+id/txt_lb_email"

            android:layout_width="wrap_content"
            android:text="Email"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#fd5242"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:text="dung19051996@gmail.com"
            android:id="@+id/txt_email"
            android:layout_below="@id/txt_lb_email"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_email"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:layout_width="24dp"
            android:background="@drawable/ic_email"
            android:layout_alignParentRight="true"
            android:layout_height="24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_sdt"
        android:layout_below="@id/layout_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:id="@+id/txt_lb_sdt_"

            android:layout_width="wrap_content"
            android:text="Số điện thoại"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#fd5242"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:text="0327190596"
            android:id="@+id/txt_sdt"
            android:layout_below="@id/txt_lb_sdt_"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_call_phone"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:layout_width="24dp"
            android:background="@drawable/ic_phone"
            android:layout_alignParentRight="true"
            android:layout_height="24dp" />
    </RelativeLayout>
    <TextView
        android:layout_alignParentBottom="true"
        android:text="\@ Copyright Minh Dũng"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>